<h1 class="display-1">Edit '<%= @task.title  %>' task</h1>
<div class="form-group">
  <form action="/tasks/update" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :id, @task[:id] %>
    <label for="title">Title</label>
    <input type="text" name="task[title]" id="title" class="form-control">
    <label for="details">Details</label>
    <input type="text" name="task[details]" id="details" class="form-control">
    <input type="submit" class="btn btn-primary my-3">
  </form>

</div>
